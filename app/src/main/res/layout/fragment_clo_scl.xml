<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mktFragment.CloSclFragment">

    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_month_day_hour_minute2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/month_day_hour_minute"
            />
        <TextView
            android:id="@+id/tv_time2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            />


        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/btn_closeSchedule"
        android:layout_width="102dp"
        android:layout_height="61dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        android:text="关闭日程" />
    <Button
        android:id="@+id/btn_deleteSchedule"
        android:layout_width="102dp"
        android:layout_height="61dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        android:text="清除全部日程" />
    </LinearLayout>

        <TextView
            android:id="@+id/instructionshow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
</LinearLayout>

</FrameLayout>